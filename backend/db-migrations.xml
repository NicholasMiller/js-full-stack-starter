<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:pro="http://www.liquibase.org/xml/ns/pro" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd
         http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-3.8.xsd">


  <changeSet id="1" author="Nick Miller">
    <createTable tableName="users">
      <column name="id" type="int" autoIncrement="true">
        <constraints primaryKey="true" nullable="false" />
      </column>
      <column name="first_name" type="varchar">
        <constraints nullable="false"/>
      </column>
      <column name="last_name" type="varchar">
        <constraints nullable="false"/>
      </column>
      <column name="password" type="varchar">
        <constraints nullable="false"/>
      </column>
      <column name="email" type="varchar">
        <constraints nullable="false" unique="true" uniqueConstraintName="users_email_ix1"/>
      </column>
    </createTable>

    <createTable tableName="todo_items">
      <column name="id" type="int" autoIncrement="true">
        <constraints primaryKey="true" nullable="false" />
      </column>
      <column name="user_id" type="int">
        <constraints nullable="false"/>
      </column>
      <column name="item" type="varchar">
        <constraints nullable="false"/>
      </column>
      <column name="display_order" type="int">
        <constraints nullable="false"/>
      </column>
    </createTable>

    <sql>
      INSERT INTO users 
        (first_name, last_name, password, email)
        VALUES 
        ('Testing', 'User', crypt('testing', gen_salt('bf', 8)), 'user@test.com')
    </sql>


  </changeSet>

</databaseChangeLog>
